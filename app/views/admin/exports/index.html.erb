<div class="container mt-5">
  <div class="row d-flex justify-content-center align-items-center flex-column">
    <div class="col-sm-6 col-md-6 col-lg-6 d-flex justify-content-center align-items-center flex-column">

      <h2>Exporter les réservations</h2>

        <%= form_with url: reservations_admin_exports_path, method: :get, local: true, data: { turbo: false } do %>
          <div>
            <%= label_tag :date_debut, "Date de début", class: "mb-3" %><br>
            <%= date_field_tag :date_debut, params[:date_debut] || 1.month.ago.to_date, required: true %>
          </div>

          <div>
            <%= label_tag :date_fin, "Date de fin", class: "my-3" %><br>
            <%= date_field_tag :date_fin, params[:date_fin] || Date.today, required: true %>
          </div>

          <div>
            <%= label_tag :format_export, "Format du fichier", class: "my-3" %><br>
            <%= select_tag :format_export, options_for_select([["CSV", "csv"], ["Excel", "xlsx"], ["PDF", "pdf"]], params[:format_export] || "csv"), required: true %>
          </div>

          <div>
            <%= submit_tag "Exporter", class: "btn btn-primary my-4" %>
          </div>
        <% end %>

      <%= link_to "Retour", root_path, class:" btn btn-secondary"%>
    </div>
  </div>

</div>

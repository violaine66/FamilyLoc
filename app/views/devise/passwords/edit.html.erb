<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= asset_path 'champ.avif' %>')">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-sm-6 col-md-4 col-lg-4">
        <h2 class="text-white">Change your password</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs mt-3">
            <%= f.input :password,
                        label: "Nouveau mot de passe",
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirmer le nouveau mot de passe",
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions mb-4">
            <%= f.button :submit, "Changer mon mot de passe", class:"btn-home"%>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

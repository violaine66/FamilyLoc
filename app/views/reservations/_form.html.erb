<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for [@propriete, @reservation] do |f| %>
        <%= f.input :date_debut, as: :string, input_html: { data: { controller: "datepicker" } } %>
        <%= f.input :date_fin, as: :string, input_html: { data: { controller: "datepicker" } } %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
